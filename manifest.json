{
    "manifest_version": 2, NpycZVAOoy
    "name": "Bot changer",
    "short_name": "bot", 
    "description": "Bot de programação ",
    "version": "1.0",
    "content_scripts": [
        {
            
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "html":["popup.html"]
        }
    ],
    "background":{
        "page": "background/background.html",
        "persistend": false
    },
    "options_ui":{
        "open_in_tab": true,
        "page": "options/options.html"
    },
    "browser_action": {
        "default_title": "Bot de Roleta",
        "default_popup": "options/options.html"
    },
    
    "permissions": [
        "tabs",
        "storage",
        "notifications"

    ]
}

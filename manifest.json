{
    "manifest_version": 2,
    "name": "Bot changer",
    "short_name": "bot", 
    "description": "Bot de programação ",
    "version": "1.0",
    "content_scripts": [
        {
            
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background":{
        "page": "background/background.html",
        "persistend": false
    },
    "options_ui":{
        "open_in_tab": true,
        "page": "options/index.html"
    },
    "browser_action": {
        "default_title": "Video Speed Changer",
        "default_popup": "popup/index.html"
    },
    
    "permissions": [
        "tabs",
        "storage"
    ]
}